<%= render 'banner' %>

<div class="articles">
  <h1>Articles</h1>
    <% @articles.each do |article| %>
    <div class="article">
      <div class="article-title">
        <h2><%= link_to article.title, article_path(article)  %></h2>
      </div>
      <div class="article-content">
        <p><%= article.content  %></p>
      </div>
    </div>
    <% end %>

</div>





